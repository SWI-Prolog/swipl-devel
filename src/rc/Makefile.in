prefix=@prefix@
exec_prefix=@exec_prefix@
srcdir=@srcdir@
@VPATH@ @srcdir@
bindir=$(exec_prefix)/bin
PLBASE=@libdir@/@PL@-$(PLVERSION)
man_prefix=$(prefix)/man
mansec=1
lmansec=3
mandir=$(man_prefix)/man$(mansec)
lmandir=$(man_prefix)/man$(lmansec)
plmandir=$(PLBASE)/man

CC=@CC@
EXEEXT = @EXEEXT@
AR=@AR@
RANLIB=@RANLIB@
PLARCH=@PLARCH@
COFLAGS=@COFLAGS@
CWFLAGS=@CWFLAGS@
CIFLAGS=@CIFLAGS@
CMFLAGS=@CMFLAGS@
CPFLAGS=
LDFLAGS=@PROGLDFLAGS@ $(CPFLAGS)
CFLAGS=	$(CWFLAGS) $(COFLAGS) $(CIFLAGS) $(CMFLAGS) $(CPFLAGS)

INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
INSTALL_DATA=@INSTALL_DATA@

MINGW=@MINGW@
ifeq ($(MINGW),true)
UXNTLIB=../../lib/$(PLARCH)/libuxnt.a
else
UXNTLIB=
endif

LIBOBJ=	html.o access.o build.o util.o

all:	swipl-rc$(EXEEXT)

swipl-rc$(EXEEXT):	librc.a rc.o $(UXNTLIB)
	$(CC) $(LDFLAGS) -o $@ rc.o $(UXNTLIB) -L. -lrc

librc.a:	$(LIBOBJ)
	rm -f $@
	$(AR) cq $@ $(LIBOBJ)
	$(RANLIB) $@

ifeq ($(MINGW),true)
$(UXNTLIB):
	@(cd ../os/windows && $(MAKE) COFLAGS="$(COFLAGS)")
endif

.c.o:
	$(CC) -c -I.. $(CFLAGS) $< @COUTOPT@

################################################################
# Documentation
################################################################

html:	rc.tex
	latex2html rc

dvi:	rc.dvi

rc.dvi:	rc.tex
	./latex_if_needed rc

rc.tex:	rc.doc
	../xpce/bin/doc2tex rc.doc > rc.tex

################################################################
# Cleanup
################################################################

clean:
	rm -f *% *~ $(LIBOBJ) rc.o

profclean:
	rm -f *.gcda

distclean: clean profclean
	rm -f Makefile
	rm -f swipl-rc librc.a

