.SUFFIXES: .tex .dvi .doc .pl

SHELL=/bin/bash

PL=@PL@
PLBASE=@PLBASE@
PCEHOME=/staff/jan/src/xpce

CGISCRIPT=rdf-parser
CGIDIR=/etc/httpd/cgi-bin
CGIURL=http://gollem.swi.psy.uva.nl/cgi-bin
WEBPAGE=~www/projects/SWI-Prolog/packages/sgml/online.html
CGIGRP=www

DOCTOTEX=$(PCEHOME)/bin/doc2tex
PLTOTEX=$(PCEHOME)/bin/pl2tex
LATEX=latex
DOC=rdf2pl
TEX=$(DOC).tex
DVI=$(DOC).dvi
PDF=$(DOC).pdf
HTML=$(DOC).html

INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
INSTALL_DATA=@INSTALL_DATA@

LIBPL=		rdf.pl rdf_parser.pl rdf_triple.pl rewrite.pl uri.pl

all:		
		@echo "Nothing to do for this package"

install:	$(LIBPL)
		$(INSTALL) -m 644 $(LIBPL) $(PLBASE)/library
		$(PL) -f none -g make -t halt

rpm-install:	install

uninstall:
		(cd $(PLBASE)/library && rm -f $(LIBPL))
		$(PL) -f none -g make -t halt

################################################################
# CGI INSTALL
################################################################

cgi-install:	$(CGIDIR)/$(CGISCRIPT) \
		Online-requests \
		$(WEBPAGE)

cgi-uninstall:
		rm -f $(CGIDIR)/$(CGISCRIPT) $(WEBPAGE)

Online-requests:
		mkdir $@
		chmod 775 $@
		chgrp $(CGIGRP) $@

$(WEBPAGE):	online.html
		sed 's%@ACTION@%$(CGIURL)/$(CGISCRIPT)%' online.html > $@

$(CGIDIR)/$(CGISCRIPT): rdf-parser
		sed "s%@BASEDIR@%`pwd`%" rdf-parser > $@
		chmod 755 $@

################################################################
# Documentation
################################################################

doc:		$(PDF) $(HTML)
pdf:		$(PDF)
html:		$(HTML)

$(HTML):	$(TEX)
		latex2html $(DOC)
		mv html/index.html $@

$(PDF):		$(TEX)
		runtex --pdf $(DOC)

$(TEX):		$(DOCTOTEX)

.doc.tex:
		$(DOCTOTEX) $*.doc > $*.tex
.pl.tex:
		$(PLTOTEX) $*.pl > $*.tex

################################################################
# Clean
################################################################

clean:
		rm -f *~ *% config.log

distclean:	clean
		rm -f $(TARGETS) config.cache config.status Makefile
		rm -f $(TEX)
		runtex --clean $(DOC)
